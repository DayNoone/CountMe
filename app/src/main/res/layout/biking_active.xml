<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"

        android:background="@drawable/stopbtn"
        android:src="@drawable/btn_highlight"

        android:layout_marginBottom="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="stopBiking" />

    <com.mobile.countme.custom_classes.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:00:00"
        android:id="@+id/tracking_time"
        android:textSize="50sp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true" />

    <com.mobile.countme.custom_classes.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/zero_kmph"
        android:id="@+id/current_speed"
        android:textSize="30sp"
        android:layout_below="@+id/tracking_time"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <com.mobile.countme.custom_classes.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0.00 km"
        android:id="@+id/tripDistance"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/current_speed"
        android:layout_alignStart="@+id/current_speed" />

<RelativeLayout
    android:id="@+id/relId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:onClick="sendError"
        android:background="@drawable/road_fault"
        android:src="@drawable/btn_highlight"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/report_problem"
        android:textSize="9.5dp"
        android:id="@+id/textView7"
        android:layout_marginTop="5dp"
        android:layout_below="@id/button8"
        android:gravity="center"
         />

</RelativeLayout>

    <com.mobile.countme.custom_classes.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/biking_active"
        android:textSize="30sp"
        android:id="@+id/textView20"
        android:layout_marginTop="95dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>